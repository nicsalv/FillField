<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <!-- The bill amount -->

    <TextView
        android:id="@+id/search_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="@string/string_result"
        android:textSize="16sp"
        android:fontFamily="@font/seasrn__"/>
    <TextView
        android:id="@+id/billAmountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/search_label"
        android:layout_marginLeft="200dp"
        android:layout_toRightOf="@+id/search_label"
        android:ems="1"
        android:inputType="numberDecimal"
        android:text="@string/search_result_number"
        android:textSize="16sp"
        android:fontFamily="@font/seasrn__"/>
    <View
        android:id="@+id/line_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="3dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignLeft="@+id/search_label"
        android:layout_below="@+id/search_label"/>

    <include
        android:id="@+id/result_list"
        android:layout_marginTop="@dimen/card_margin"
        layout="@layout/fragment_field_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line_separator" />


</RelativeLayout>